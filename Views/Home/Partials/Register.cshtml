@model Belt.Models.RegValidator
<h2>Register</h2>
<form asp-action="Register" asp-controller="Home" method="post">
    Username: <input asp-for="username"> <span asp-validation-for="username"></span><br><br>
    Password: <input asp-for="password"> <span asp-validation-for="password"></span><br><br>
    Confirm password: <input asp-for="pw_confirm"> <span asp-validation-for="pw_confirm"></span><br><br>
    First name: <input asp-for="first_name"> <span asp-validation-for="first_name"></span><br><br>
    Last name: <input asp-for="last_name"> <span asp-validation-for="last_name"></span><br><br>
    <input type="submit" value='Register'>
</form>